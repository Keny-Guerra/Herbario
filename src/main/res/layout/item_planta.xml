<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imagePlanta"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@drawable/search_bar_bg"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textNombrePlanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/primaryTextColor"/>

        <TextView
            android:id="@+id/textDescripcionPlanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/textPrecioPlanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="15sp"
            android:textColor="@color/priceColor"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textCantidadPlanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 0"
            android:textSize="14sp"
            android:textColor="@color/primaryColor"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</LinearLayout>